{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "CMCS (.NET Run)",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "args": [
        "run",
        "--launch-profile",
        "https"
      ],
      "cwd": "${workspaceFolder}/CMCS",
      "console": "integratedTerminal",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Now listening on:\\s+(https?://\\S+)"
      }
    }
  ]
}