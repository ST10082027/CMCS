@model CMCS.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5" style="max-width: 480px;">
    <h2 class="mb-4 text-center">Welcome to CMCS</h2>
    <p>Please log in to continue</p>
    <form asp-action="Login" method="post" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <div class="mb-3">
            <label asp-for="Username" class="form-label"></label>
            <input asp-for="Username" class="form-control" autocomplete="username" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-control" autocomplete="current-password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary w-100">Log in</button>
            <a class="btn btn-outline-secondary w-100" asp-action="Exit">Exit</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}