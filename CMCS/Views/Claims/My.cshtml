@model IEnumerable<CMCS.Models.MonthlyClaim>
@{
    ViewData["Title"] = "My Claims";
}
<h2>@ViewData["Title"]</h2>
<p>
    <a class="btn btn-primary" asp-controller="Claims" asp-action="New">New Claim</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Month</th>
            <th>Hours</th>
            <th>Rate</th>
            <th>Amount</th>
            <th>Status</th>
            <th>Docs</th>
            <th>Submitted At</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.MonthKey</td>
            <td>@c.Hours</td>
            <td>@c.Rate</td>
            <td>@c.Amount</td>
            <td>@c.Status</td>
            <td>
                @if (c.Documents != null && c.Documents.Any())
                {
                    <div class="dropdown">
                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                            @c.Documents.Count
                        </button>
                        <ul class="dropdown-menu">
                            @foreach (var d in c.Documents)
                            {
                                <li>
                                    <a class="dropdown-item" asp-controller="Claims" asp-action="DownloadDocument" asp-route-id="@d.Id">
                                        @d.FileName
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                }
                else
                {
                    <span class="text-muted">â€”</span>
                }
            </td>
            <td>@(c.SubmittedAt?.ToLocalTime().ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
            <td>
                @if (c.Status == CMCS.Models.ClaimStatus.Draft || c.Status == CMCS.Models.ClaimStatus.Rejected)
                {
                    <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@c.Id">Edit</a>
                    <form asp-action="Submit" asp-route-id="@c.Id" method="post" class="d-inline">
                        <button class="btn btn-sm btn-success" type="submit">Submit</button>
                    </form>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
