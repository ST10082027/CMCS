@model CMCS.Models.ViewModels.CreateUserViewModel
@{
    ViewData["Title"] = "Create User";
}

<div class="container py-4" style="max-width: 720px;">
    <h3 class="mb-3">Create User</h3>

    <form asp-action="Create" method="post" novalidate>
        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" />
            </div>
        </div>

        <div class="mb-3 mt-3">
            <label asp-for="SelectedRole" class="form-label"></label>
            <select asp-for="SelectedRole" class="form-select" asp-items="@(new SelectList(Model.AvailableRoles))" id="roleSelect"></select>
            <span asp-validation-for="SelectedRole" class="text-danger"></span>
        </div>

        <div id="hourlyRateGroup" class="mb-3" style="display:none;">
            <label asp-for="HourlyRate" class="form-label"></label>
            <input asp-for="HourlyRate" class="form-control" />
            <span class="form-text">Only required for IC users.</span>
            <span asp-validation-for="HourlyRate" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const sel = document.getElementById('roleSelect');
            const rateGroup = document.getElementById('hourlyRateGroup');
            function toggleRate() {
                rateGroup.style.display = (sel.value === 'IC') ? 'block' : 'none';
            }
            if (sel) {
                sel.addEventListener('change', toggleRate);
                toggleRate();
            }
        })();
    </script>
}
