@model List<CMCS.Models.ViewModels.CorporateUserListItem>
@{
    ViewData["Title"] = "User & Role Management";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">User & Role Management</h3>
        <a class="btn btn-primary" asp-action="Create">Create User</a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">No users found.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Username</th>
                        <th>Name</th>
                        <th>Role</th>
                        <th class="text-end">Hourly Rate (R/hr)</th>
                        <th class="text-end"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model)
                    {
                        <tr>
                            <td>@u.Email</td>
                            <td>@u.UserName</td>
                            <td>@($"{u.FirstName} {u.LastName}".Trim())</td>
                            <td>@u.Role</td>
                            <td class="text-end">
                                @(u.Role == "IC" ? (u.HourlyRate?.ToString("0.00") ?? "0.00") : "-")
                            </td>
                            <td class="text-end">
                                @if (u.Role == "IC")
                                {
                                    <a class="btn btn-sm btn-outline-primary" asp-action="EditRate" asp-route-id="@u.Id">Edit Rate</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
