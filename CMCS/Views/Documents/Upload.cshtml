@model CMCS.Models.MonthlyClaim
@{
    ViewData["Title"] = "Upload Supporting Document";
}

<h1 class="display-6 mb-3">Upload Supporting Document</h1>

<!-- Status messages -->
@if (TempData["ok"] != null)
{
    <div class="alert alert-success">@TempData["ok"]</div>
}
@if (TempData["warn"] != null)
{
    <div class="alert alert-warning">@TempData["warn"]</div>
}
@if (TempData["error"] != null)
{
    <div class="alert alert-danger">@TempData["error"]</div>
}

<div class="card mb-4">
    <div class="card-header">
        Claim Summary
    </div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Month</dt>
            <dd class="col-sm-9">@Model.MonthKey</dd>

            <dt class="col-sm-3">Hours</dt>
            <dd class="col-sm-9">@Model.Hours</dd>

            <dt class="col-sm-3">Rate (R/hr)</dt>
            <dd class="col-sm-9">@Model.Rate.ToString("0.00")</dd>

            <dt class="col-sm-3">Amount</dt>
            <dd class="col-sm-9">R @Model.Amount.ToString("0.00")</dd>
        </dl>
    </div>
</div>

<form asp-action="Upload"
      asp-controller="Documents"
      method="post"
      enctype="multipart/form-data"
      class="card">
    <div class="card-body">
        @Html.AntiForgeryToken()
        <input type="hidden" name="claimId" value="@Model.Id" />

        <div class="mb-3">
            <label class="form-label">Choose file to upload</label>
            <input type="file" name="file" class="form-control" />
            <small class="text-muted">
                Allowed types: PDF, Word, Excel, images, CSV, TXT. Max size 20 MB.
            </small>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                Upload
            </button>
            <a asp-controller="Claims"
               asp-action="Review"
               asp-route-id="@Model.Id"
               class="btn btn-outline-secondary">
                Back to Review
            </a>
        </div>
    </div>
</form>

@if (Model.Documents != null && Model.Documents.Count > 0)
{
    <h3 class="mt-4">Existing Documents</h3>
    <ul class="list-group">
        @foreach (var doc in Model.Documents)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>@doc.FileName</span>
                <a asp-controller="Documents"
                   asp-action="DownloadDocument"
                   asp-route-id="@doc.Id"
                   class="btn btn-sm btn-outline-primary">
                    Download
                </a>
            </li>
        }
    </ul>
}
