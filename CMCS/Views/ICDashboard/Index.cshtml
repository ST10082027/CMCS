@{
    ViewData["Title"] = "Independent Contractor Dashboard";
}
<div class="container py-4">
    <h2 class="mb-4">Independent Contractor</h2>
    <div class="row g-3">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Submit Monthly Claim</h5>
                    <p class="card-text">Capture hours, rates, and supporting documents.</p>
                    <a class="btn btn-primary" asp-action="SubmitMonthlyClaim">Open</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Claim History</h5>
                    <p class="card-text">Track status (Draft, Submitted, Approved, Rejected, Paid).</p>
                    <a class="btn btn-primary" asp-action="ClaimHistory">Open</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Profile</h5>
                    <p class="card-text">Banking details, tax info, contact updates.</p>
                    <a class="btn btn-primary" asp-action="Profile">Open</a>
                </div>
            </div>
        </div>
    </div>
</div>