@model IEnumerable<CMCS.Models.MonthlyClaim>

@{
    ViewData["Title"] = "My Claims";
}

<div class="container mt-4">
    <h2 class="mb-4">My Claims</h2>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Month</th>
                <th>Status</th>
                <th>Total Hours</th>
                <th>Amount</th>
                <th>Submitted</th>
                <th>Updated</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.MonthKey</td>
                <td>@c.Status</td>
                <td>@c.Hours</td>
                <td>R @String.Format("{0:N2}", c.Amount)</td>
                <td>@(c.SubmittedAt?.ToString("yyyy-MM-dd") ?? "-")</td>
                <td>@(c.UpdatedAt.ToString("yyyy-MM-dd") ?? "-")</td>

                <td>
                    @* Only Draft or Rejected claims may be opened *@
                    @if (c.Status == CMCS.Models.ClaimStatus.Draft || c.Status == CMCS.Models.ClaimStatus.Rejected)
                    {
                        <a class="btn btn-sm btn-secondary"
                           asp-controller="Claims"
                           asp-action="Review"
                           asp-route-id="@c.Id">
                            Review
                        </a>
                    }
                    else
                    {
                        <span class="text-muted">No actions available</span>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
