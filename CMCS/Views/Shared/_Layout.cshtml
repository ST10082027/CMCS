@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CMCS.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Dynamic brand link -->
                @if (User?.Identity?.IsAuthenticated ?? false)
                {
                    if (User.IsInRole("IC"))
                    {
                        <a class="navbar-brand" asp-controller="ICDashboard" asp-action="Index">CMCS</a>
                    }
                    else if (User.IsInRole("MR"))
                    {
                        <a class="navbar-brand" asp-controller="MRDashboard" asp-action="Index">CMCS</a>
                    }
                    else if (User.IsInRole("CO"))
                    {
                        <a class="navbar-brand" asp-controller="CODashboard" asp-action="Index">CMCS</a>
                    }
                    else
                    {
                        <!-- fallback if authenticated but no role -->
                        <a class="navbar-brand" asp-controller="Home" asp-action="Index">CMCS</a>
                    }
                }
                else
                {
                    <a class="navbar-brand" asp-controller="Account" asp-action="Login">CMCS</a>
                }

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            @if (User.IsInRole("IC"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="ICDashboard" asp-action="Index">IC Dashboard</a>
                                </li>
                            }
                            @if (User.IsInRole("MR"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="MRDashboard" asp-action="Index">MR Dashboard</a>
                                </li>
                            }
                            @if (User.IsInRole("CO"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="CODashboard" asp-action="Index">CO Dashboard</a>
                                </li>
                            }
                        </ul>

                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-flex">
                            <button type="submit" class="btn btn-outline-danger">Logout</button>
                        </form>
                    }
                    else
                    {
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            2025 - CMCS - ST10082027
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>