@using Microsoft.AspNetCore.Http

@{
    var userId = Context.Session.GetString("UserId");
    var role = Context.Session.GetString("UserRole");
    var loggedIn = !string.IsNullOrEmpty(userId);
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">

                <!-- Branding -->
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    CMCS
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation -->
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <!-- LECTURER -->
                        @if (role == "Lecturer")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="LecturerDashboard" asp-action="Index">
                                    Lecturer Dashboard
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Claims" asp-action="My">
                                    My Claims
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Claims" asp-action="New">
                                    Submit Claim
                                </a>
                            </li>
                        }

                        <!-- PROGRAMME COORDINATOR -->
                        @if (role == "Coordinator")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="ProgrammeCoordinatorDashboard" asp-action="Index">
                                    Programme Coordinator Dashboard
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="ClaimsReview" asp-action="Queue">
                                    Claims to Verify
                                </a>
                            </li>
                        }

                        <!-- ACADEMIC MANAGER -->
                        @if (role == "AcademicManager")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="AcademicManagerDashboard" asp-action="Index">
                                    Academic Manager Dashboard
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="ClaimsApproval" asp-action="Queue">
                                    Review Queue
                                </a>
                            </li>
                        }


                        <!-- HUMAN RESOURCES -->
                        @if (role == "HR")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="HRDashboard" asp-action="Index">
                                    HR Dashboard
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="HRManageUsers" asp-action="Index">
                                    Manage Users
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="HRClaims" asp-action="All">
                                    Claims Overview
                                </a>
                            </li>
                            
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="HRClaims" asp-action="Report">
                                    Claims Report
                                </a>
                            </li>

                        }

                    </ul>

                    <!-- Right-side login/logout -->
                    <ul class="navbar-nav">
                        @if (loggedIn)
                        {
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="nav-link btn btn-link text-light p-0 m-0 align-baseline">
                                        Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Account" asp-action="Login">
                                    Login
                                </a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <!-- Main body -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center py-3">
            &copy; @DateTime.Now.Year - CMCS
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>